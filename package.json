{
  "name": "bbp",
  "private": true,
  "scripts": {
    "watch:browser-sync": "npx browser-sync start --no-open --proxy localhost --files \"bbp/static_build/**/*\" \"bbp/public/*\" \"bbp/**/*.html\" \"bbp/**/*.svg\"",
    "watch:webpack": "npx webpack --config webpack.dev.js --watch",
    "watch:server": "docker-compose run --rm --service-ports -v $(pwd):/app -e DJANGO_SETTINGS_MODULE=bbp.settings.dev web ./manage.py runserver --nostatic 0.0.0.0:8000",
    "start": "npx run-p watch:*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcdickinson/bbp.git"
  },
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "css-loader": "^2.1.0",
    "eslint": "^5.15.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "mini-css-extract-plugin": "^0.5.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.16.1",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {}
}
